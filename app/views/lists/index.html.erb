<div class="banner shadow-sm">Movie Collection</div>
<div class="d-flex">
  <div class='form-container'>
  <p class="d-inline-flex gap-1">
    <button class="btn btn-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
      New List
    </button>
    </p>
    <div class="collapse" id="collapseExample">
    <div class="card card-body bgr mb-4" style="max-width: 500px;">
        <%= simple_form_for(@list) do |f| %>
          <%= f.input :name %>
          <%= f.input :image_url %>
          <%= f.submit %>
        <% end %>
    </div>
    </div>
  </div>

  <div class='container'>
  <h2>My lists</h2>
  <% if @lists.any? %>
  <div class='row'>
  <% @lists.each do |list| %>
  <div class="col">
    <div class="card bg-dark text-white d-flex shadow-sm">
      <div class="card-bgr" style="background-image: url('<%= list.image_url %>')">
      <div class="d-flex justify-content-center align-items-center">
        <h5 class="card-title"><%= link_to list.name, list_path(list) %></h5>
      </div>
      </div>
    </div>
  </div>
  <% end %>
  </div>
  </div>
  <% else %>
  <h3>No list yet!</h3>
  <%= link_to "Your First List", new_list_path, class: 'btn btn-secondary' %>
  <% end %>

</div>
