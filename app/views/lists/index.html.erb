<div class="banner shadow-sm">Movie Collection</div>

  <div class="d-flex">
    <div class="form-container">
      <div class="btn-group dropright">
        <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          New List
        </button>
        <div class="dropdown-menu">
          <%= simple_form_for(@list) do |f| %>
                  <%= f.input :name %>
                  <%= f.input :image_url %>
                  <%= f.submit %>
                <% end %>
          </div>
        </div>
      </div>

    <div class='container'>
    <h2>My lists</h2>
    <% if @lists.any? %>
    <div class='row'>
    <% @lists.each do |list| %>
    <div class="col">
      <div class="card bg-dark text-white d-flex shadow-sm">
        <div class="card-bgr" style="background-image: url('<%= list.image_url %>')">
        <div class="d-flex justify-content-center align-items-center">
          <h5 class="card-title"><%= link_to list.name, list_path(list) %></h5>
        </div>
        </div>
      </div>
    </div>
    <% end %>
    </div>
    </div>
    <% else %>
    <h3>No list yet!</h3>
    <%= link_to "Your First List", new_list_path, class: 'btn btn-secondary' %>
    <% end %>

</div>
