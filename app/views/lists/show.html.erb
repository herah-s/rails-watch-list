<div class="list_banner shadow-sm" style='background-image: url("<%= @list.image_url %>")'>
<div class="d-flex flex-column justify-content-center align-items-center">
  <div><%= @list.name %></div>
  <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#exampleModal">
        New Bookmark
  </button>
  </div>
</div>

  <div class="modal fade" id="exampleModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content bgr">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">New Bookmark</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <%= simple_form_for [@list, @bookmark] do |f| %>
              <%= f.input :comment %>
              <%= f.association :movie %>
          </div>
          <div class="modal-footer">
              <%= f.button :submit, class: "btn-secondary" %>
            <% end %>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>

<div class='container'>
    <div class="row">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="col-md-4">
          <div class="card mb-3 bgr" style="max-width: 540px;">
            <div class="row">
              <div class="col-md-4">
                <div class="movie_poster img-fluid rounded-start" style='background-image: url("<%= bookmark.movie.poster_url %>")'></div>
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title text-light"><%= bookmark.movie.title %> - <%= bookmark.movie.rating.round(1) %>‚≠ê</h5>
                  <p class="card-text"><small class="text-light"><i class="fa-solid fa-angles-right"></i><%= bookmark.comment %><i class="fa-solid fa-angles-left"></i></small></p>
                  <p class="card-text"><%= bookmark.movie.overview %></p>
                  <div><p class="card-text delete"><small class="text-body-secondary"><%= link_to 'Delete', bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: 'btn btn-secondary' %></small></p></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
     </div>
</div>
