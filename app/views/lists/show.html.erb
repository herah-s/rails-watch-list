<div class="list_banner shadow-sm" style='background-image: url("<%= @list.image_url %>")'><%= @list.name %></div>

<div class='container'>

  <p class="d-inline-flex gap-1">
  <button class="btn btn-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
    Add Bookmark
  </button>
  </p>
  <div class="collapse" id="collapseExample">
  <div class="card card-body bgr mb-4" style="max-width: 500px;">
      <%= simple_form_for [@list, @bookmark] do |f| %>
        <%= f.input :comment %>
        <%= f.association :movie %>
        <%= f.button :submit, class: "btn-secondary" %>
      <% end %>
  </div>
  </div>

    <div class="row">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="col-md-4">
          <div class="card mb-3 bgr" style="max-width: 540px;">
            <div class="row">
              <div class="col-md-4">
                <div class="movie_poster img-fluid rounded-start" style='background-image: url("<%= bookmark.movie.poster_url %>")'></div>
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title text-light"><%= bookmark.movie.title %> - <%= bookmark.movie.rating.round(1) %>‚≠ê</h5>
                  <p class="card-text"><small class="text-light"><i class="fa-solid fa-angles-right"></i><%= bookmark.comment %><i class="fa-solid fa-angles-left"></i></small></p>
                  <p class="card-text"><%= bookmark.movie.overview %></p>
                  <div><p class="card-text delete"><small class="text-body-secondary"><%= link_to 'Delete', bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: 'btn btn-secondary' %></small></p></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
     </div>
</div>
